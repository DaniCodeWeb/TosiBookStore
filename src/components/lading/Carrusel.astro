---
import BookCarousel from './BookCarousel.astro';
---

<section class="bg-indigo-400 relative overflow-hidden min-h-[500px] md:min-h-[600px] flex items-center flex-grow"
       data-aos="zoom-in"
       data-aos-duration="600"
       data-aos-delay="300">
  <!-- Fondo con imagen -->
  <div class="absolute inset-0 bg-[url('/src/assets/img/landing/fondoPrin.jpg')] bg-cover bg-center opacity-50"></div>
  <div class="absolute inset-0 bg-indigo-500/20"></div>

  <!-- Decoraci칩n de estrellas (responsive) -->
  <div class="absolute top-10 md:top-21 right-5 md:right-10">
    <svg class="w-6 h-6 md:w-8 md:h-8" viewBox="0 0 30 30" fill="#FFD700">
      <path d="M15 0L18.5 11.5H30L20.5 18.5L24 30L15 23L6 30L9.5 18.5L0 11.5H11.5L15 0Z"/>
    </svg>
  </div>

  <!-- Contenido principal -->
  <div class="container mx-auto px-4 py-8 md:py-16 relative z-10">
    <div class="text-center mb-8 md:mb-12">
      <h1 class="text-white text-2xl sm:text-3xl md:text-4xl font-light italic mb-4">
        Encuentra lo mejor en nuestra p치gina con las <br class="hidden sm:block">
        <span class="font-medium">mejores novedades</span>
      </h1>
    </div>

    <!-- Carrusel adaptado -->
    <div class="max-w-full sm:max-w-2xl md:max-w-4xl mx-auto px-2 sm:px-0 rounded-xl">
      <BookCarousel />
    </div>
  </div>

  <!-- Elementos decorativos (ocultos en mobile) -->
  <div class="hidden md:block absolute bottom-20 left-20">
    <svg class="w-5 h-5" viewBox="0 0 20 20" fill="#FFD700">
      <path d="M10 0L12.3 7.7H20L13.8 12.3L16.1 20L10 15.4L3.9 20L6.2 12.3L0 7.7H7.7L10 0Z"/>
    </svg>
  </div>

  <!-- M치s decoraci칩n (solo desktop) -->
  <div class="hidden lg:block absolute bottom-1 right-5">
    <svg class="w-32 h-20" viewBox="0 0 150 100" fill="none">
      <path d="M140 10C140 10 100 20 80 40C60 60 50 90 50 90" stroke="#FFD700" stroke-width="2"/>
      <circle cx="140" cy="10" r="8" fill="#FFD700"/>
    </svg>
  </div>
</section>
