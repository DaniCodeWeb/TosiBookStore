---

const {mainPage, page} = Astro.props;

---


<!--begin::Sidebar-->
<aside class="app-sidebar bg-primary-subtle" data-bs-theme="dark">
  <!--begin::Sidebar Brand-->
  <div class="sidebar-brand">
    <!--begin::Brand Link-->
      <a href="/administracion/" class={`brand-link ${mainPage === "usuarios" && page === "lista" ? "active" : ""}`}>
      <!--begin::Brand Image-->
      <img
        src= "/src/assets/img/Tosilogo1.png"
        alt="logo TosiBookStore"
        class="brand-image opacity-75 shadow"
      />
      <!--end::Brand Image-->
      <!--begin::Brand Text-->
      <span class="brand-text fw-light">TosiBookStore</span>
      <!--end::Brand Text-->
    </a>
    <!--end::Brand Link-->
  </div>
  <!--end::Sidebar Brand-->
  <!--begin::Sidebar Wrapper-->
  <div class="sidebar-wrapper">
    <nav class="mt-2">
      <!--begin::Sidebar Menu-->
      <ul
        class="nav sidebar-menu flex-column"
        data-lte-toggle="treeview"
        role="menu"
        data-accordion="false"
      >

        <!-- panel de control -->
        <li class="nav-item">
          <a href="/administracion/" class={`nav-link ${mainPage === "usuarios" && page === "lista" ? "active" : ""}`}>
            <i class="bi bi-circle nav-icon"></i>
            <p>Panel de control</p>
          </a>
        </li>
        <!-- termina panel de control -->

        <!-- separamos los crud Usuarios  -->
        <li class:list={["nav-item", mainPage === "forms" && "menu-open"]}>
          <a
            href="#"
            class:list={["nav-link", mainPage === "forms" && "active"]}
          >
            <i class="nav-icon bi bi-person"></i>
            <p>
              Usuarios
              <i class="nav-arrow bi bi-chevron-right"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/administracion/usuarios" class={`nav-link ${mainPage === "usuarios" && page === "lista" ? "active" : ""}`}>
                <i class="bi bi-circle nav-icon"></i>
                <p>Lista de usuarios</p>
              </a>
            </li>
          </ul>
        </li>
        <!-- termina crud usuarios -->
        <!-- Crud de ventas -->
        <li class:list={["nav-item", mainPage === "tables" && "menu-open"]}>
          <a
            href="#"
            class:list={["nav-link", mainPage === "tables" && "active"]}
          >
            <i class="nav-icon bi bi-currency-exchange"></i>
            <p>
              Ventas
              <i class="nav-arrow bi bi-chevron-right"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/administracion/ventas" class={`nav-link ${mainPage === "usuarios" && page === "lista" ? "active" : ""}`}>
                <i class="bi bi-circle nav-icon"></i>
                <p>Lista de Ventas</p>
              </a>
            </li>
          </ul>
        </li>
        <!-- termina crud ventas -->
        <!-- crud de compras -->
        <li class:list={["nav-item", mainPage === "tables" && "menu-open"]}>
          <a
            href="#"
            class:list={["nav-link", mainPage === "tables" && "active"]}
          >
            <i class="nav-icon bi bi-shop"></i>
            <p>
              Compras
              <i class="nav-arrow bi bi-chevron-right"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/administracion/compras" class={`nav-link ${mainPage === "usuarios" && page === "lista" ? "active" : ""}`}>
                <i class="bi bi-circle nav-icon"></i>
                <p>Lista de Compras</p>
              </a>
            </li>
          </ul>
        </li>
        <!-- termina crud de compras -->
        <!-- Crud Productos -->
        <li class:list={["nav-item", mainPage === "tables" && "menu-open"]}>
          <a
            href="#"
            class:list={["nav-link", mainPage === "tables" && "active"]}
          >
            <i class="nav-icon bi bi-book"></i>
            <p>
              Productos
              <i class="nav-arrow bi bi-chevron-right"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/administracion/productos" class={`nav-link ${mainPage === "usuarios" && page === "lista" ? "active" : ""}`}>
                <i class="bi bi-circle nav-icon"></i>
                <p>Lista de productos</p>
              </a>
            </li>
          </ul>
        </li>
        <!-- termina crud productos  -->
        <!-- Crud de categorias -->
        <li class:list={["nav-item", mainPage === "tables" && "menu-open"]}>
          <a
            href="#"
            class:list={["nav-link", mainPage === "tables" && "active"]}
          >
            <i class="nav-icon bi bi-inboxes-fill"></i>
            <p>
              Categorias
              <i class="nav-arrow bi bi-chevron-right"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/administracion/categorias" class={`nav-link ${mainPage === "usuarios" && page === "lista" ? "active" : ""}`}>
                <i class="bi bi-circle nav-icon"></i>
                <p>Lista de Categorias</p>
              </a>
            </li>
          </ul>
        </li>
        <!-- termina cruds -->

         <!-- crud de inventario -->
         <li class:list={["nav-item", mainPage === "tables" && "menu-open"]}>
          <a
            href="#"
            class:list={["nav-link", mainPage === "tables" && "active"]}
          >
            <i class="nav-icon bi bi-box-seam"></i>
            <p>
              Inventario
              <i class="nav-arrow bi bi-chevron-right"></i>
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/administracion/inventario" class={`nav-link ${mainPage === "usuarios" && page === "lista" ? "active" : ""}`}>
                <i class="bi bi-circle nav-icon"></i>
                <p>Lista de Inventario</p>
              </a>
            </li>
          </ul>
        </li>
        <!-- termina crud inventario  -->

        <li class="nav-header">Etiquetas</li>
        <li class="nav-item">
          <a href="#" class="nav-link">
            <i class="nav-icon bi bi-circle text-danger"></i>
            <p class="text">Importante</p>
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link">
            <i class="nav-icon bi bi-circle text-warning"></i>
            <p>Advertencia</p>
          </a>
        </li>
        <li class="nav-item">
          <a href="#" class="nav-link">
            <i class="nav-icon bi bi-circle text-info"></i>
            <p>informacion</p>
          </a>
        </li>
      </ul>
      <!--end::Sidebar Menu-->
    </nav>
  </div>
  <!--end::Sidebar Wrapper-->
</aside>
<!--end::Sidebar-->
