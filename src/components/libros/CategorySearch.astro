---
interface Props {
  categoryName: string;
  baseUrl: string;
}

const { categoryName, baseUrl } = Astro.props as Props;
---

<div class="mb-12 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="50">
  <form action={baseUrl} method="get" class="relative">
    <input
      type="text"
      name="search"
      placeholder={`Buscar en ${categoryName.toLowerCase()}...`}
      class="w-full py-3 px-5 pr-12 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
      value={Astro.url.searchParams.get('search') || ''}
    />
    <button type="submit" class="absolute right-3 top-3 text-gray-500 hover:text-blue-600">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
      </svg>
    </button>
  </form>
</div>
