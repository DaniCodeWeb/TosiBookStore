---
import MainLayout from '../../layouts/lading/MainLayout.astro';

// Datos de la categoría (rutas de imágenes corregidas)
const category = {
  name: "Cómics",
  slug: "comics",
  bgImage: "/assets/img/landing/Poesia.png", // Corregido: eliminado /src/
  description: "Descubre los mejores cómics de Marvel, DC y más"
};

// Datos de libros con más ejemplos y rutas corregidas
const books = [
  {
    title: "Spiderman: No Way Home",
    author: "Marvel Comics",
    cover: "/assets/img/landing/Poesia.png", // Corregido: eliminado /src/
    price: "180 bs"
  },
  {
    title: "Batman: The Dark Knight Returns",
    author: "Frank Miller",
    cover: "/assets/img/landing/Poesia.png",
    price: "200 bs"
  },
  {
    title: "Watchmen",
    author: "Alan Moore",
    cover: "/assets/img/landing/Poesia.png",
    price: "220 bs"
  },
  {
    title: "V de Vendetta",
    author: "Alan Moore",
    cover: "/assets/img/landing/Poesia.png",
    price: "190 bs"
  },
  {
    title: "Sandman",
    author: "Neil Gaiman",
    cover: "/assets/img/landing/Poesia.png",
    price: "210 bs"
  },
  {
    title: "Saga",
    author: "Brian K. Vaughan",
    cover: "/assets/img/landing/Poesia.png",
    price: "175 bs"
  },
  {
    title: "Maus",
    author: "Art Spiegelman",
    cover: "/assets/img/landing/Poesia.png",
    price: "195 bs"
  },
  {
    title: "Persépolis",
    author: "Marjane Satrapi",
    cover: "/assets/img/landing/Poesia.png",
    price: "185 bs"
  }
];
---

<MainLayout title={`Categoría: ${category.name}`} description={category.description}>
  <!-- Hero con background de la categoría -->
  <div
    class="relative h-96 w-full bg-cover bg-center flex items-center justify-center"
    style={`background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url(${category.bgImage})`}
    data-aos="fade-in"
  >
    <div class="text-center px-4" data-aos="fade-up" data-aos-delay="100">
      <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">{category.name}</h1>
      <p class="text-xl text-gray-200 max-w-2xl mx-auto">{category.description}</p>
    </div>
  </div>

  <!-- Contenido principal -->
  <main class="container mx-auto px-4 py-12">
    <!-- Buscador -->
    <div class="mb-12 max-w-2xl mx-auto" data-aos="fade-up" data-aos-delay="150">
      <div class="relative">
        <input
          type="text"
          placeholder={`Buscar en ${category.name.toLowerCase()}...`}
          class="w-full py-3 px-5 pr-12 rounded-full border border-gray-300 focus:outline-none focus:ring-2 focus:ring-blue-500"
        />
        <button class="absolute right-3 top-3 text-gray-500 hover:text-blue-600">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
        </button>
      </div>
    </div>

    <!-- Filtros de categoría -->
    <div class="mb-8 flex flex-wrap gap-3 justify-center" data-aos="fade-up" data-aos-delay="200">
      <button class="px-4 py-2 bg-blue-600 text-white rounded-full text-sm font-medium">Todos</button>
      <button class="px-4 py-2 bg-gray-200 hover:bg-yellow-400 rounded-full text-sm font-medium">Marvel</button>
      <button class="px-4 py-2 bg-gray-200 hover:bg-yellow-400 rounded-full text-sm font-medium">DC Comics</button>
      <button class="px-4 py-2 bg-gray-200 hover:bg-yellow-400 rounded-full text-sm font-medium">Manga</button>
      <button class="px-4 py-2 bg-gray-200 hover:bg-yellow-400 rounded-full text-sm font-medium">Novela Gráfica</button>
    </div>

    <!-- Grid de libros -->
    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8">
      {books.map((book, index) => (
        <div class="group" data-aos="fade-up" data-aos-delay={250 + (index * 50)}>
          <div class="relative overflow-hidden w-full h-64 rounded-lg shadow-md mb-4">
            <img
              src={book.cover || "/placeholder.svg"}
              alt={`Portada de ${book.title}`}
              class="w-full h-full object-cover transition-transform duration-300 group-hover:scale-105"
            />
            <div class="absolute inset-0 bg-black bg-opacity-0 group-hover:bg-opacity-30 transition-opacity flex items-center justify-center opacity-0 group-hover:opacity-100">
              <button class="bg-white text-gray-800 px-4 py-2 rounded-full font-medium text-sm hover:bg-blue-600 hover:text-white transition-colors">
                Añadir al carrito
              </button>
            </div>
          </div>
          <h3 class="font-bold text-lg">{book.title}</h3>
          <p class="text-gray-600 text-sm">{book.author}</p>
          <p class="font-bold text-blue-600 mt-1">{book.price}</p>
        </div>
      ))}
    </div>

    <!-- Paginación -->
    <div class="mt-12 flex justify-center" data-aos="fade-up" data-aos-delay="300">
      <nav class="flex items-center space-x-2">
        <a href="#" class="px-4 py-2 border rounded-lg text-white bg-blue-600 border-blue-600 hover:bg-blue-700 transition-colors">1</a>
        <a href="#" class="px-4 py-2 border rounded-lg hover:bg-gray-100 transition-colors">2</a>
        <a href="#" class="px-4 py-2 border rounded-lg hover:bg-gray-100 transition-colors">3</a>
        <a href="#" class="px-4 py-2 border rounded-lg hover:bg-gray-100 transition-colors flex items-center gap-1">
          Siguiente
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </a>
      </nav>
    </div>
  </main>
</MainLayout>
