<script>
// Script para la funcionalidad de impresión
document.addEventListener('DOMContentLoaded', function() {
  const printOrderBtn = document.getElementById('printOrderBtn');
  if (printOrderBtn) {
    printOrderBtn.addEventListener('click', function() {
      const printableArea = document.getElementById('printable-area');
      if (printableArea) {
        const printContents = printableArea.innerHTML;
        const originalContents = document.body.innerHTML;

        document.body.innerHTML = `
          <div style="padding: 20px;">
            ${printContents}
          </div>
        `;

        window.print();
        document.body.innerHTML = originalContents;

        // Reiniciar los event listeners después de restaurar
        setTimeout(() => {
          location.reload();
        }, 100);
      }
    });
  }

  // Cálculo automático de subtotales en el formulario de compra
  function calcularTotales() {
    const filas = document.querySelectorAll('#productosCompra tr');
    let subtotal = 0;

    filas.forEach(fila => {
      const cantidadInput = fila.querySelector('input[type="number"]:nth-of-type(1)') as HTMLInputElement;
      const precioInput = fila.querySelector('input[type="number"]:nth-of-type(2)') as HTMLInputElement;
      const subtotalCell = fila.querySelector('td:nth-child(4)');

      if (cantidadInput && precioInput && subtotalCell) {
        const cantidad = parseFloat(cantidadInput.value) || 0;
        const precio = parseFloat(precioInput.value) || 0;
        const subtotalProducto = cantidad * precio;

        subtotalCell.textContent = '$' + subtotalProducto.toFixed(2);
        subtotal += subtotalProducto;
      }
    });

    const iva = subtotal * 0.19;
    const total = subtotal + iva;

    const resumenSubtotal = document.querySelector('.card-body .d-flex:nth-child(1) strong');
    const resumenIva = document.querySelector('.card-body .d-flex:nth-child(2) strong');
    const resumenTotal = document.querySelector('.card-body .d-flex:nth-child(3) strong');

    if (resumenSubtotal && resumenIva && resumenTotal) {
      resumenSubtotal.textContent = '$' + subtotal.toFixed(2);
      resumenIva.textContent = '$' + iva.toFixed(2);
      resumenTotal.textContent = '$' + total.toFixed(2);
    }
  }

  // Añadir evento para recalcular cuando cambian los valores
  const inputsProductos = document.querySelectorAll('#productosCompra input[type="number"]');
  if (inputsProductos) {
    inputsProductos.forEach(input => {
      input.addEventListener('change', calcularTotales);
    });
  }

  // Funcionalidad para agregar nueva fila de producto
  const btnAgregarProducto = document.querySelector('.btn-primary:has(.bi-plus-circle)');
  if (btnAgregarProducto) {
    btnAgregarProducto.addEventListener('click', function() {
      const tbody = document.getElementById('productosCompra');
      if (tbody) {
        const nuevaFila = document.createElement('tr');
        nuevaFila.innerHTML = `
          <td>
            <select class="form-select form-select-sm">
              <option selected disabled>Seleccionar producto...</option>
              <option>Cartuchos de tinta HP 664</option>
              <option>Resma papel carta</option>
              <option>Discos duros SSD 500GB</option>
            </select>
          </td>
          <td><input type="number" class="form-control form-control-sm" value="1"></td>
          <td><input type="number" class="form-control form-control-sm" value="0.00"></td>
          <td>$0.00</td>
          <td>
            <button type="button" class="btn btn-sm btn-danger">
              <i class="bi bi-trash"></i>
            </button>
          </td>
        `;

        tbody.appendChild(nuevaFila);

        // Añadir eventos a los nuevos campos
        const nuevosInputs = nuevaFila.querySelectorAll('input[type="number"]');
        nuevosInputs.forEach(input => {
          input.addEventListener('change', calcularTotales);
        });

        // Añadir evento al botón de eliminar
        const btnEliminar = nuevaFila.querySelector('.btn-danger');
        if (btnEliminar) {
          btnEliminar.addEventListener('click', function() {
            nuevaFila.remove();
            calcularTotales();
          });
        }
      }
    });
  }

  // Agregar funcionalidad a los botones de eliminar existentes
  const botonesEliminar = document.querySelectorAll('#productosCompra .btn-danger');
  if (botonesEliminar) {
    botonesEliminar.forEach(btn => {
      btn.addEventListener('click', function() {
        const fila = this.closest('tr');
        if (fila) {
          fila.remove();
          calcularTotales();
        }
      });
    });
  }

  // Funcionalidad para filtros rápidos
  const filtroEstado = document.querySelector('select[aria-label="Filtrar por estado"]') as HTMLSelectElement;
  const filtroMetodo = document.querySelector('select[aria-label="Filtrar por método"]') as HTMLSelectElement;
  const filtroResponsable = document.querySelector('select[aria-label="Filtrar por responsable"]') as HTMLSelectElement;
  const filtroFecha = document.querySelector('input[aria-label="Filtrar por fecha"]') as HTMLInputElement;
  const btnFiltrar = document.querySelector('.btn-outline-primary:has(.bi-funnel-fill)');

  if (btnFiltrar && filtroEstado && filtroMetodo && filtroResponsable && filtroFecha) {
    btnFiltrar.addEventListener('click', function() {
      alert('Aplicando filtros (simulación):\n' +
            'Estado: ' + (filtroEstado.value === 'Todos los estados' ? 'Todos' : filtroEstado.value) + '\n' +
            'Método: ' + (filtroMetodo.value === 'Todos los métodos' ? 'Todos' : filtroMetodo.value) + '\n' +
            'Responsable: ' + (filtroResponsable.value === 'Todos los responsables' ? 'Todos' : filtroResponsable.value) + '\n' +
            'Fecha: ' + (filtroFecha.value || 'No seleccionada'));
    });
  }
});
</script>
